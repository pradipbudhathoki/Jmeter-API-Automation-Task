          <stringProp name="parameters"></stringProp>
          <stringProp name="script">import groovy.json.JsonSlurper;
import groovy.json.JsonOutput;
import java.nio.file.Files;
import java.nio.file.Paths;
import org.apache.jmeter.services.FileServer;

// Define file paths
String inputFilePath = FileServer.getFileServer().getBaseDir() + &quot;/GET_Response.json&quot;;
String outputFilePath = FileServer.getFileServer().getBaseDir() + &quot;/POST_Request.json&quot;;

// Read the GET_Response.json file
String jsonContent = new String(Files.readAllBytes(Paths.get(inputFilePath)));
JsonSlurper jsonSlurper = new JsonSlurper();
List data = jsonSlurper.parseText(jsonContent);

// Modify the JSON content
data.each { item -&gt;
    if (item.userId % 2 != 0 &amp;&amp; item.id % 2 == 0) {
        item.completed = !item.completed;
    }
}

// Save the modified content to POST_Request.json
String modifiedContent = JsonOutput.toJson(data);
Files.write(Paths.get(outputFilePath), modifiedContent.getBytes());

log.info(modifiedContent);

// Print a success message to JMeter log
log.info(&quot;Modified JSON content and saved to POST_Request.json&quot;);
</stringProp>
